extends layout

block content
  .row.banner
    .col-12
      h1 Tell us how we can make FIDO better!!!
  .row
    .col-12.col-md-7
      form(action="/comments/", method="get", role="form")
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="name") Name
          .col-12.col-sm-10
            input#name.form-control(name="name")
        .form-group.row
          label.col-sm-2.col-form-label(for="review") Review
          .col-sm-10
            textarea#review.form-control(name="review", rows="5")
        button.btn.btn-primary.float-right Add my Comments
    .col-12.col-md-4